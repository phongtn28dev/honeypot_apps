{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@particle-network/universal-account-sdk": [
        "node_modules/@particle-network/universal-account-sdk/dist/index"
      ],
      "@honeypot-frontend/universal-account": [
        "libs/shared/universal-account/src/index.ts"
      ],
      "@honeypot/shared": ["libs/shared/hpot-sdk/src/index.ts"],
      "@honeypot/shared/*": ["libs/shared/hpot-sdk/src/*"],
      "@honeypot/shared/server/callers": [
        "libs/shared/hpot-sdk/src/server/callers/index.ts"
      ],
      "@particle-network/universal-account-sdk": [
        "./node_modules/@particle-network/universal-account-sdk/dist/index.d.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
